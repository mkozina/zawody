<h1>Utwórz nowe zawody</h1>

<p>Wprowadź parametry nowych zawodów:</p>

<% if(err) { %>
	<p><%= err %></p>
<% } %> 

<form class="form" action="/ccontest" method="post">

<input type="text" name="name" placeholder="Nazwa zawodów" />

<p>Punktacja:
	<select name="scores">
		<option value="ten">0...10</option>
		<option value="twenty">0...20</option>
	</select>
	<div class="radio">
		<input type="radio" name="granulation" value="full" checked> tylko całe punkty
	</div>
	<div class="radio">
		<input type="radio" name="granulation" value="half"> połówki punktów
	</div>
</p>

<input type="text" name="noref" placeholder="Liczba sędziów w grupach" />

<input type="date" name="dateofcontest" placeholder="Data zwodów" />

<p>
	<select id="addcontestant" name="list">
		<% contestants.forEach(function(contestant) { %>
		<option value="<%= contestant.name %>"><%= contestant.name %></option>
		<% }); %>
	</select>
	<button id="add" type="button">Add</button>
</p>
<p>
	Lista startowa:
	<div id="startinglist"></div>
</p>

<div class="buttons">
	<button type="submit">Submit</button>
	<a href="/lcontest"><button type="button">Cancel</button></a>
</div>
</form>

<script src='/js/ccontest.js'></script>
